          "label": "Title",
          "default": "<p>Join Our VIP Club</p>"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "<p>Mus mauris vitae ultricies leo. Ac feugiat sed lectus vestibulum lacus laoreet non curabitur.</p>"
        }
      ]
    },
    {
      "type": "form",
      "name": "Form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "name_label",
          "label": "Name Input Label",
          "default": "Name..."
        },
        {
          "type": "checkbox",
          "id": "display_name_input",
          "label": "Display Name Input",
          "default": true
        },
        {
          "type": "text",
          "id": "email_label",
          "label": "Email Input Label",
          "default": "Email..."
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label",
          "default": "Subscribe"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "üçä Signup",
      "category": "a",
      "blocks": [
        {
          "type": "header"
        },
        {
          "type": "form"
        }
      ]
    }
  ]
}
{% endschema %}
