          "type": "richtext",
          "id": "title",
          "label": "Title",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur</p><p>adipiscing elit.</p>"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "<p>Landjaeger ground round tongue qui in, labore fatback</p><p>brisket prosciutto esse.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "color",
          "id": "color_dot",
          "label": "Dot Color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "üçä Hero",
      "category": "a",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
