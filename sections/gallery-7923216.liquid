          "type": "image_picker",
          "id": "image",
          "label": "Thumbnail"
        },
        {
          "type": "select",
          "id": "video_type",
          "label": "Type",
          "options": [
            {
              "value": "htmlvid",
              "label": "HTML"
            },
            {
              "value": "vimeo",
              "label": "Vimeo"
            },
            {
              "value": "youtube",
              "label": "Youtube"
            }
          ],
          "default": "youtube"
        },
        {
          "type": "text",
          "id": "video_id",
          "label": "ID",
          "default": "_9VUPq3SxOc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "üçä Gallery",
      "category": "a",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "video"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
