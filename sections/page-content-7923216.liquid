{% comment %} {{ 'section-page-content-product-7923216.css' | asset_url | stylesheet_tag }} {% endcomment %}

{% assign use_as_default_padding = section.settings.use_as_default_padding %}
{%- style -%}
    {%- if use_as_default_padding -%}
      .page-content-{{ section.id }} .section__container {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px !important;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px !important;
      }

      @media screen and (min-width: 750px) {
        .page-content-{{ section.id }} .section__container {
          padding-top: {{ section.settings.padding_top }}px !important;
          padding-bottom: {{ section.settings.padding_bottom }}px !important;
        }
      }
    {%- endif -%}

   
    .page-content-{{ section.id }} h2{
        color: rgb({{ settings.colors_accent_2.red }}, {{ settings.colors_accent_2.green }}, {{ settings.colors_accent_2.blue }});
    }

    .page-content-{{ section.id }} strong{
        color: rgba({{ settings.colors_accent_2.red }}, {{ settings.colors_accent_2.green }}, {{ settings.colors_accent_2.blue }},.8);
    }
    

{%- endstyle -%}
<div class="page-content page-content-{{ section.id }} section-with-bg">
  <div class="section__container">
    <div class="page-width">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "üçä Page Content",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "checkbox",
      "id": "use_as_default_padding",
      "label": "Set as default",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36,
      "info": "Default Value is 36"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36,
      "info": "Default Value is 36"
    }
  ],
  "presets": [
    {
      "name": "üçä Page Content",
      "category": "a"
    }
  ]
}
{% endschema %}
